echo  'You have the following options: \n';
echo  '1. Display todays date\n 2. Display current process of user.\n 3. List all the Files\n 4. Quit to Unix';
read comm;

if [ $comm -eq 1 ]
then
	date;
elif [ $comm -eq 2 ]
then
	ps;
elif [ $comm -eq 3 ]
then
	ls -al;
elif [ $comm -eq 4 ]
then
	exit;
else
	echo "Incorrect command";
	break;
fi
